{
  "name": "auto-image-compressor",
  "displayName": "auto-image-compressor",
  "description": "Quickly compress images in your project",
  "version": "1.0.7",
  "publisher": "jayep",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/newwangzhicheng/auto-image-compressor"
  },
  "engines": {
    "vscode": "^1.93.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "images/icon.png",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoImageCompressor.setApiKey",
        "title": "Set Tinify API Key"
      }
    ],
    "configuration": {
      "title": "Auto Image Compressor",
      "properties": {
        "autoImageCompressor.tinifyApiKey": {
          "type": "string",
          "default": "",
          "description": "Tinify API Key",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.93.1",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "mocha": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^19.0.2",
    "typescript": "^5.7.3"
  },
  "pnpm": {
    "supportedArchitectures": {
      "os": [
        "win32",
        "darwin",
        "current"
      ],
      "cpu": [
        "x64",
        "arm64"
      ]
    }
  },
  "dependencies": {
    "sharp": "^0.33.5",
    "tinify": "^1.8.0"
  }
}
